<div id="about_business_service">
<h1><u>Name: <%= @business_service.name %></u></h1>
<h3><i>Description: <%= @business_service.description %></i></h3>
<p><%= @business_service.id %></p>
</div>
<b><u>Potential Clients:</u></b>


<div id="potential-client-list">
<% @all_clients.each do |client| %>

    <% client.business_services.each do |service| %>


        <% if service.id == @business_service.id %>
            <ul>
            <li>Name: <%= client.name %><br>
            Last Contacted: <%= client.last_contacted %><br>
            Reply: <%= client.reply %><br>
            Business Service: <%= service.name %><br> 
            <a href="#" onclick="getClients(); return false;">Show More</a>
            <%#= link_to "See More",  business_service_potential_client_path(@business_service.id, client.id)</li><br><br> %>
            </ul>

        <% end %>
    <% end %>
<% end %>
</div>
<br><br>

