<h1>Welcome! Please sign up. </h1>

<%= flash[:error] %>

<%= form_for @user do |f| %>
    
    <%= render partial: 'layouts/errors', locals: {object: @user} %>

    <%= f.label :username %>   
    <%= f.text_field :username %>
    <br>
    <br>

    <%= f.label :password %>   
    <%= f.password_field :password %>

<br><br>
    <%= f.label :password_confirmation %>   
    <%= f.password_field :password_confirmation %>

<br><br>
    <%= f.submit "Sign Up" %>
<% end %>