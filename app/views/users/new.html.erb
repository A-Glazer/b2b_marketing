<h1>Welcome! Please sign up. </h1>

<%= form_for @user do |f| %>
    
    <%= f.label :username %>   
    <%= f.text_field :username %>
    <br>
    <br>

    <%= f.label :password %>   
    <%= f.password_field :password %>

<br><br>
    <%= f.label :password_confirmation %>   
    <%= f.password_field :password_confirmation %>

<br><br>
    <%= f.submit "Sign Up" %>
<% end %>